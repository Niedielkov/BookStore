@{
    ViewData["Title"] = "Home";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to <strong>MK-Library</strong></h1>
        <p class="lead text-muted">
            Here you will find the best books written by great authors from all over the world. Enjoy reading!
        </p>
        <img src="~/images/index_image.jpg" style="width: 100%" />
    </div>
</section>

<div class="container">
    <hr />
    <div class="col-md-6">
        <h3>Contact Us</h3>
        Email us any questions or inquiries or call 518-387-9999. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <div class="col-md-12">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="MessageBody" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
    <hr />
</div>