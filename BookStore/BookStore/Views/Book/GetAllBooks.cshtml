@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "Books";
}

<div class="container">
    <h3 class="display-4 py-3">Books</h3>
    <hr />
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 my-2">
                <div class="card" style="width: 100%">
                    <img class="img-thumbnail" src="@book.CoverImageUrl">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                                <partial name="_DeleteBookPartial" model="@book.Id" />
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr />
</div>
